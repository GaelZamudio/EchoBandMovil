<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".FragmentGanado3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Ejercicio completado!"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="140dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Nivel máximo de concentración: 134 ¡Nuevo récord!"
        android:textSize="16sp"
        android:textColor="#373737"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Nivel más bajo de concentración: 65"
        android:textSize="16sp"
        android:textColor="#373737"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Concentración promedio: 100"
        android:textSize="16sp"
        android:textColor="#373737"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel completado con 5 estrellas"
        android:textSize="16sp"
        android:textColor="#373737"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+25 pts a tu perfil"
        android:textSize="16sp"
        android:textColor="#373737"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver al inicio"
            android:textSize="15sp"
            android:textColor="#000000"
            android:backgroundTint="#4DD0E1"
            android:layout_marginHorizontal="2dp"
            android:id="@+id/btn_volver" />
    </LinearLayout>
</LinearLayout>
