<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

            <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/juanitobn"
                    android:layout_gravity="center" />

            <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juanito Pérez"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tvCorreo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ElMasCrack"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textColor="#888888" />

        </LinearLayout>

        <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concentración promedio (Por cada ejercicio realizado)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

        <com.example.echobandapp.LineChartView
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

        <TextView
                android:id="@+id/tvEjercicios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ejercicios realizados"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memorización"
                    android:textSize="14sp"
                    android:layout_weight="1" />

            <ProgressBar
                    android:id="@+id/progressMemorizacion"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="3"
                    android:progressTint="#7C3DD5"
                    android:progress="81"
                    android:max="100"
                    android:layout_marginEnd="8dp" />

            <TextView
                    android:id="@+id/tvMemorizacionPorcentaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="81%"
                    android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rapidez"
                    android:textSize="14sp"
                    android:layout_weight="1" />

            <ProgressBar
                    android:id="@+id/progressRapidez"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="3"
                    android:progress="63"
                    android:max="100"
                    android:progressTint="#D83CE3"
                    android:layout_marginEnd="8dp" />

            <TextView
                    android:id="@+id/tvRapidezPorcentaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="63%"
                    android:textSize="14sp" />
        </LinearLayout>

        <!-- Progreso de Focalización General -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retención"
                    android:textSize="14sp"
                    android:layout_weight="1" />

            <ProgressBar
                    android:id="@+id/progressRetencion"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:progressTint="#3DD568"
                    android:layout_weight="3"
                    android:progress="52"
                    android:max="100"
                    android:layout_marginEnd="8dp" />

            <TextView
                    android:id="@+id/tvRetencionPorcentaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52%"
                    android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
